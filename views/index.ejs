<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Диалог с телеграм-ботом</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f8f9fa; /* Цвет фона страницы */
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            position: relative; /* Добавлено для корректного позиционирования кнопки FAB */
        }
        h1 {
            color: #007bff;
            text-align: center;
            margin-bottom: 20px;
        }
        .chat-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 300px;
            max-height: 80vh; /* Максимальная высота чата */
            overflow-y: auto;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            padding: 10px;
            z-index: 1000; /* Выше всех остальных элементов */
        }
        .chat-message {
            margin-bottom: 10px;
            padding: 8px;
            border-radius: 8px;
        }
        .bot-message {
            background-color: #d4edda; /* Цвет фона сообщений бота */
        }
        .user-message {
            background-color: #cce5ff; /* Цвет фона сообщений пользователя */
        }
        #message-form {
            margin-top: 10px;
            display: flex;
        }
        #message-input {
            flex: 1;
            padding: 8px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            margin-right: 10px;
            font-size: 14px;
        }
        #send-button {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            cursor: pointer;
            font-size: 14px;
        }
        #send-button:hover {
            background-color: #0056b3; /* Изменение цвета фона при наведении */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Диалог с телеграм-ботом</h1>

        <!-- Контейнер чата, всегда открытый -->
        <div class="chat-container" id="chat-container">
            <ul id="messages-list">
                <% messages.forEach(function(message) { %>
                    <% if (message.fromBot) { %>
                        <li class="chat-message bot-message">Администратор: <%= message.text %></li>
                    <% } else { %>
                        <li class="chat-message user-message">Пользователь : <%= message.text %></li>
                    <% } %>
                <% }); %>
            </ul>

            <form id="message-form">
                <input type="hidden" id="uid-input" name="uid" value="<%= uid %>">
                <input type="text" id="message-input" name="message" placeholder="Введите сообщение">
                <button type="submit" id="send-button">Отправить</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io({ query: { uid: '<%= uid %>' } });

        function updateMessages(newMessages) {
            $('#messages-list').empty();
            newMessages.forEach(function(message) {
                if (message.fromBot) {
                    $('#messages-list').append(`<li class="chat-message bot-message">Администратор : ${message.text}</li>`);
                } else {
                    $('#messages-list').append(`<li class="chat-message user-message">Пользователь : ${message.text}</li>`);
                }
            });
            // Прокрутка чата вниз при добавлении новых сообщений
            $('#chat-container').scrollTop($('#chat-container')[0].scrollHeight);
        }

        socket.on('updateMessages', function(messages) {
            updateMessages(messages);
        });

        $(document).ready(function() {
            // Обработчик отправки формы
            $('#message-form').submit(function(event) {
                event.preventDefault();
                const uid = $('#uid-input').val();
                const messageText = $('#message-input').val();
                socket.emit('sendMessage', messageText);
                $.post('/send-message', { uid: uid, message: messageText }, function(response) {
                    console.log(response);
                });
                $('#message-input').val('');
            });

            // Инициализация чата (открываем его, если есть сообщения)
            const messages = <%- JSON.stringify(messages) %>;
            updateMessages(messages);

            // Прокрутка чата вниз при загрузке страницы, если есть сообщения
            $('#chat-container').scrollTop($('#chat-container')[0].scrollHeight);
        });
    </script>
</body>
</html>
