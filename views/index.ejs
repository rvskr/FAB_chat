<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Сообщения из телеграм-бота</title>
</head>
<body>
    <h1>Сообщения из телеграм-бота</h1>
    <ul id="messages-list">
        <% messages.forEach(function(message) { %>
            <li class="<%= message.fromBot ? 'bot-message' : 'user-message' %>">
                [<%= message.uid %>] <%= message.text %>
            </li>
        <% }); %>
    </ul>

    <form id="message-form">
        <input type="text" id="message-input" name="message" placeholder="Введите сообщение">
        <button type="submit">Отправить</button>
    </form>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        function updateMessages(newMessages) {
            $('#messages-list').empty();
            newMessages.forEach(function(message) {
                const messageClass = message.fromBot ? 'bot-message' : 'user-message';
                $('#messages-list').append(`<li class="${messageClass}">[${message.uid}] ${message.text}</li>`);
            });
        }

        socket.on('updateMessages', function(messages) {
            updateMessages(messages);
        });

        $(document).ready(function() {
            updateMessages(<%- JSON.stringify(messages) %>);

            setInterval(function() {
                socket.emit('updateMessages', Object.values(messages));
            }, 5000);
        });

        $('#message-form').submit(function(event) {
            event.preventDefault();
            const messageText = $('#message-input').val();
            socket.emit('sendMessage', messageText);
            $.post('/send-message', { message: messageText }, function(response) {
                console.log(response);
            });
            $('#message-input').val('');
        });
    </script>
</body>
</html>
